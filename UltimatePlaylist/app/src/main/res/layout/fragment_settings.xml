<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SettingsFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/settings_streaming_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/settings_streaming_tab_spotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spotify_name" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/settings_streaming_tab_soundcloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soundcloud_name" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/settings_tabs_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>